                            <jreModules>${project.build.directory}/mods</jreModules>
                            <applicationModulesPath>${project.build.directory}/libs</applicationModulesPath>
                            <appVersion>${app-version}</appVersion>
                            <moduleName>${module-name}</moduleName>
                            <packageIdentifier>${package-identifier}</packageIdentifier>
                            <moduleStarter>${module-starter}</moduleStarter>
                            <macDeveloperId>${MAC_DEVELOPER_ID}</macDeveloperId>
                            <macKeychainProfile>notary-profile</macKeychainProfile>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>com.coderplus.maven.plugins</groupId>
                        <artifactId>copy-rename-maven-plugin</artifactId>
                        <version>1.0.1</version>
                        <executions>
                            <execution>
